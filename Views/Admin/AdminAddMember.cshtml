@model Midheaven.Models.Member
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminAddMember</title>
    <link href="~/script/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="text-center">
        @using (Html.BeginForm("AdminAddMember", "Admin", FormMethod.Post))
        {
            <h2>添加成员信息</h2>
            <p>编号：@Html.TextBoxFor(m => m.M_ID)</p>
            <p>姓名：@Html.TextBoxFor(m => m.RealName)</p>
            <p>
                学生性别：
                <span>@Html.RadioButtonFor(m => m.Sex, "男") 男</span>
                <span> @Html.RadioButtonFor(m => m.Sex, "女") 女</span>
            </p>
            <p>年龄：@Html.TextBoxFor(m => m.Age)</p>
            <p>电话：@Html.TextBoxFor(m => m.PhoneNum)</p>
            <p>地址：@Html.TextBoxFor(m => m.Address)</p>
            <p>
                角色：
                @Html.DropDownListFor(m => m.R_ID, new SelectList(ViewBag.ddl, "Value", "Text"))
            </p>
            <p>
                是否审核通过：
                <span>@Html.RadioButtonFor(m => m.M_Flog, "是") 是</span>
                <span> @Html.RadioButtonFor(m => m.M_Flog, "否") 否</span>
            </p>
            <input name="subadd" type="submit" value="添加">
        }
    </div>
</body>
</html>
