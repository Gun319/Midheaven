
@{
    ViewBag.Title = "AdminSelAllCourse";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}
<style type="text/css">
    .con {
        width: 100%;
        margin: auto auto;
    }

    .all {
        width: 800px;
        height: 800px;
        margin: auto auto;
    }
</style>
<link href="~/script/bootstrap.min.css" rel="stylesheet" />
<table border="1" cellpadding="0" cellspacing="0" class="con text-center">
    <tr>
        <th>课程编号</th>
        <th>课程名称</th>
        <th>课程描述</th>
        <th>课程图片</th>
        <th>课程状态</th>
        <th>操作</th>
    </tr>
    @foreach (Midheaven.Models.Course item in ViewBag.cla)
    {
        <tr>
            <td>@item.C_ID</td>
            <td>@item.C_Name</td>
            <td>@item.C_Desc</td>
            <td>@item.C_img</td>
            <td>@item.C_flog</td>
            <td>
                @Html.ActionLink("删除", "StuDel", new { id = item.C_ID }, new { onclick = "return confirm('确认删除？')" })
            </td>
        </tr>
    }
</table>

