@model Midheaven.Models.Member
@{
    ViewBag.Title = "AdminIndex";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}
<style type="text/css">
    .con {
        width: 100%;
        margin: auto auto;
    }

    .all {
        width: 1000px;
        height: auto;
        margin: auto auto;
        background: url('../../image/41ff6d4fc8df1c547478d0830531a063.jpg') no-repeat;
    }
</style>
<link href="~/script/bootstrap.min.css" rel="stylesheet" />
<div class="con text-center">
    <div class="all">
        <br />
        @using (Html.BeginForm("AdminIndex", "Admin", FormMethod.Get))
        {
            <div class="row ml-5">
                <p>姓名：@Html.TextBoxFor(m => m.RealName)</p>
                <p>
                    是否审核通过：
                    <span>@Html.RadioButtonFor(m => m.M_Flog, "0")是</span>
                    <span>@Html.RadioButtonFor(m => m.M_Flog, "1")否</span>
                    @Html.RadioButtonFor(m => m.M_Flog, "-1", new { @checked = true })全部
                </p>
                <input type="submit" name="sub" value="查询" />
            </div>
        }

        <br />
        <table border="1" cellpadding="0" cellspacing="0" class="con text-center">
            <tr>
                <th>编号</th>
                <th>姓名</th>
                <th>性别</th>
                <th>年龄</th>
                <th>电话</th>
                <th>地址</th>
                <th>角色</th>
                <th>是否通过审核</th>
                <th>操作</th>
            </tr>
            @foreach (Midheaven.Models.Member item in ViewBag.stu)
            {
                <tr>
                    <td>@item.M_ID</td>
                    <td>@item.RealName</td>
                    <td>@item.Sex</td>
                    <td>@item.Age</td>
                    <td>@item.PhoneNum</td>
                    <td>@item.Address</td>
                    <td>@(Convert.ToInt32(item.R_ID)==2?"教师":"学生")</td>
                    @if (item.M_Flog == 0)
                    {
                        <td>@Html.ActionLink("已通过", "Editflag", new { flag = 1, id = item.M_ID })</td>
                    }
                    else
                    {
                        <td>@Html.ActionLink("未通过", "Editflag", new { flag = 0, id = item.M_ID })</td>
                    }
                    <td>
                        @Html.ActionLink("删除", "Del", new { id = item.M_ID }, new { onclick = "return confirm('确认删除？')" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


