@model Midheaven.Models.Member
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/title.ico" rel="icon" type="image/x-icon" />
    <title>更新个人信息</title>
    <link href="~/script/bootstrap.min.css" rel="stylesheet" />
    <script src="~/script/jquery-3.4.1.min.js"></script>
    <script src="~/script/bootstrap.min.js"></script>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-light text-white-50 bg-secondary sticky-top">
            <a class="navbar-brand text-white-50" href="">中天教育-更新个人信息</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto"></ul>
                <a href="/Member/Index" class="text-white-50 mr-3">退出</a>
            </div>
        </nav>
        <div>
            <div class="container mt-3">
                <div class="form-group row">
                    <label class="col-2 d-none d-md-block col-form-label" for="LOName">登录名：</label>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-10", @placeholder = "登录名" })
                </div>

                <div class="form-group row">
                    <label class="col-2 d-none d-md-block col-form-label" for="pwd">密码：</label>
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control col-10", @placeholder = "密码" })
                </div>

                <div class="form-group row">
                    <label class="col-2 d-none d-md-block col-form-label" for="realname">真实姓名：</label>
                    @Html.TextBoxFor(m => m.RealName, new { @class = "form-control col-10", @placeholder = "真实姓名" })
                </div>

                <div class="form-group row">
                    <label class="col-2 d-none d-md-block col-form-label" for="MberSex">性别：</label>
                    <label>@Html.RadioButtonFor(m => m.Sex, "男")<span>男</span></label>
                    &nbsp;&nbsp;
                    <label>@Html.RadioButtonFor(m => m.Sex, "女")<span>女</span></label>
                </div>

                <div class="form-group row">
                    <label class="col-2 d-none d-md-block col-form-label" for="MberAge">年龄：</label>
                    @Html.TextBoxFor(m => m.Age, new { @class = "form-control col-10", @placeholder = "年龄" })
                </div>

                <div class="form-group row">
                    <label class="col-2 d-none d-md-block col-form-label" for="MberTel">电话：</label>
                    @Html.TextBoxFor(m => m.PhoneNum, new { @class = "form-control col-10", @placeholder = "电话" })
                </div>

                <div class="form-group row">
                    <label class="col-2 d-none d-md-block col-form-label" for="MberAddress">地址：</label>
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control col-10", @placeholder = "地址" })
                </div>
                <div class="form-group row">
                    <input type="button" id="Edit" class="btn btn-primary btn-lg btn-block" value="确认更新">
                </div>
            </div>
        </div>
    </div>
    <script src="~/script/MemberUpdateInfo.js"></script>
</body>
</html>