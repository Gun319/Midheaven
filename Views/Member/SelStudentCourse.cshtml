
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>中天教育-退课</title>
    <link href="~/script/bootstrap.min.css" rel="stylesheet" />
    <script src="~/script/jquery-3.4.1.min.js"></script>
    <script src="~/script/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-light text-white-50 bg-secondary sticky-top">
            <label class="mr-2 font-weight-bold">中天教育</label>
            <label><span class="text-info">@ViewBag.tName</span> _ 已选课程</label>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto"></ul>
                <form class="form-inline my-2 my-lg-0" method="post">
                    <label class="form-inline">
                        <span>课程名称：</span>@Html.TextBox("courseName", "", new { @class = "form-control", placeholder = "搜索课程" })
                    </label>
                    <button type="button" id="Sel" class="btn btn-info ml-3 mr-3">查询</button>
                </form>
                <a href="/Member/MemberByStudent" class="text-white-50 mr-2">返回</a>
            </div>
        </nav>
        <div class="container mt-2">
            <table class="table table-striped text-center table-hover" id="dg">
                <thead class="thead-dark">
                    <tr>
                        <th width="90">课程编号</th>
                        <th>课程名称</th>
                        <th>简介</th>
                        <th width="100">操作</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <script type="text/javascript">
        selpage();

        /**
         显示已选课程
         */
        function selpage() {
            $.ajax({
                url: "/Member/SelCourse",
                type: "post",
                data: {},
                success: function (data) {
                    var str = "";
                    $.each(data, function (index, item) {
                        str += "<tr>";
                        str += "<td>" + item.C_ID + "</td>";
                        str += "<td>" + item.C_Name + "</td>";
                        str += "<td>" + item.C_Desc + "</td>";
                        str += "<td><button type='button' class='btn btn-danger'id='btnup' onclick='Del(" + item.ID + ");'>退课</button></td>";
                        str += "</tr>";
                    })
                    $("#dg tbody tr").remove();
                    $("#dg tbody").append(str);
                    return;
                }
            });
        }

        function Del(id) {
            $.ajax({
                url: "/Member/DelStudentCourse",
                type: "post",
                data: { id: id },
                success: function (data) {
                    if (data = 200) {
                        alert('退课完成');
                        return;
                    }
                    else {
                        alert('退课失败，请检查网络连接');
                    }
                }
            });
        }
    </script>
</body>
</html>
