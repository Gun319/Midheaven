@model Midheaven.Models.Member
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Addstu</title>
    <link href="~/script/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <h2 class="text-center">学生信息</h2>
        @using (Html.BeginForm("Addstu", "Member", FormMethod.Post))
        {
            <div class="container">
                <div class="form-group row">
                    <label class="col-4 d-none d-md-block col-form-label" for="stuid">学生编号：</label>
                    @Html.TextBoxFor(m => m.M_ID, new { @class = "form-control col-8", @placeholder = "学生编号" })
                </div>
                <div class="form-group row">
                    <label class="col-4 d-none d-md-block col-form-label" for="stuname">学生姓名：</label>
                    @Html.TextBoxFor(m => m.RealName, new { @class = "form-control col-8", @placeholder = "学生姓名" })
                </div>
                
                <div class="form-group row">
                    <label class="col-4 d-none d-md-block col-form-label" for="name">登录名：</label>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-8", @placeholder = "登录名" })
                </div>
                <div class="form-group row">
                    <label class="col-4 d-none d-md-block col-form-label" for="pwd">密码：</label>
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control col-8", @placeholder = "密码", @type = "password" })
                </div>
                <div class="form-group row">
                    <label class="col-4 d-none d-md-block col-form-label" for="sex">性别：</label>
                    @Html.TextBoxFor(m => m.Sex, new { @class = "form-control col-8", @placeholder = "性别" })
                </div>
                <div class="form-group row">
                    <label class="col-4 d-none d-md-block col-form-label" for="phone">电话：</label>
                    @Html.TextBoxFor(m => m.PhoneNum, new { @class = "form-control col-8", @placeholder = "电话" })
                </div>
                <div class="form-group row">
                    <label class="col-4 d-none d-md-block col-form-label" for="adree">住址：</label>
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control col-8", @placeholder = "住址" })
                </div>
                <input class="btn btn-primary btn-lg btn-block" type="submit" value="添加">
            </div>
        }
        </div>
    
</body>
</html>
