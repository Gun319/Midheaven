
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/title.ico" rel="icon" type="image/x-icon" />
    <title>教师</title>
    <link href="~/script/bootstrap.min.css" rel="stylesheet" />
    <script src="~/script/jquery-3.4.1.min.js"></script>
    <script src="~/script/bootstrap.min.js"></script>
    <style type="text/css">
        .course {
            width: 100%;
            overflow: hidden;
        }

        .courseItem {
            margin: auto;
            width: 1500px;
            height: 80px;
            border: 0;
            background-color: #DDD;
            border-radius: 8px;
        }

        .img {
            height: 100%;
            border-radius: 8px;
            float: left;
            height: 70px;
        }

        .inline-info1 {
            height: 80px;
            width: 35%;
            /*border: 1px solid #979797;*/
            border-radius: 8px;
            float: left;
            margin-left: 10px;
            text-align: left;
            line-height: 34px;
            font-size: 14px;
        }

        .inline-info {
            height: 80px;
            width: 20%;
            /*border: 1px solid #000;*/
            border-radius: 8px;
            float: left;
            margin-left: 5px;
            text-align: left;
            font-size: 14px;
        }

        .inline-info2 {
            height: 80px;
            width: 12%;
            /*border: 1px solid #000;*/
            border-radius: 8px;
            float: left;
            margin-left: 5px;
            text-align: center;
            line-height: 80px;
            font-size: 14px;
        }

        .title {
            color: red;
        }
    </style>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-light text-white-50 bg-secondary sticky-top">
            <a class="navbar-brand text-white-50" href="">中天教育</a>
            <span>教师：@ViewBag.tName</span>
            <input type="hidden" id="tname" value="@ViewBag.tName" />
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto"></ul>
                <a href="#" class="text-white-50 mr-3">上传新课</a>
                <form class="form-inline my-2 my-lg-0" method="post">
                    <label class="form-inline">
                        <span>课程名称：</span>@Html.TextBox("courseName", "", new { @class = "form-control", placeholder = "搜索课程" })
                    </label>
                    <button type="button" id="Sel" class="btn btn-info ml-3 mr-5">查询</button>
                </form>
            </div>
        </nav>

        <div class="course" id="course">
            <div></div>
        </div>
    </div>
</body>
</html>
<script>
    //MemberByTeacher
    funCourse();

    $("#courseName").keydown((event) => {
        funCourse();
    })

    $("#Sel").click(() => {
        funCourse();
    });

    /**
     显示当前教师所属课程信息
     */
    function funCourse() {
        var cName = $("#courseName").val();
        var tname = $("#tname").val();
        $.ajax({
            url: "/Member/MemberByTeacher",
            type: "post",
            data: { cName: cName },
            success: (data) => {
                var str = "";
                $.each(data, (idnex, item) => {
                    str += '<div class="courseItem shadow-sm mt-3"><div class="img">' +
                        '<img src="/image/Course/' + item.C_img + '" style="width: 80px; height: 80px; border-radius: 8px; vertical-align: middle;" /></div >' +
                        '<div class="inline-info1"><label class="title">课程名称：</label><label>' + item.C_Name + '</label><br /><label class="title">上传教师：</label><label>' + tname + '</label></div>' +
                        '<div class="inline-info"><span class="title">简介：</span><span>' + item.C_Desc + '</span></div>' +
                        '<div class="inline-info2"><label class="title">选课人数：</label>' +
                        '<label>12<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg">' +
                        '<path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />' +
                        '<path fill-rule="evenodd" d="M8.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H9v1.5a.5.5 0 0 1-1 0V8H6.5a.5.5 0 0 1 0-1H8V5.5a.5.5 0 0 1 .5-.5z" /></svg>' +
                        '</label></div><div class="inline-info2"><span class="title">变更可选状态：</span><button class="btn btn-primary" onclick="Updete(' + item.C_ID + ');">' + (item.C_flog == 0 ? "可选" : "已下架") + '</button></div>' +
                        '<div class="inline-info2"><button class="btn btn-danger" onclick="EditByFlog(' + item.C_ID + ');">清除该课程</button></div></div >';
                })
                $("#course div div").remove();
                $("#course div").append(str);
            }
        });
    }
</script>