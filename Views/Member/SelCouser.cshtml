@model Midheaven.Models.Course
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/title.ico" rel="icon" type="image/x-icon" />
    <title>SelCouser</title>
    <link href="~/script/bootstrap.min.css" rel="stylesheet" />
    <script src="~/script/jquery-3.4.1.min.js"></script>
    <script src="~/script/bootstrap.min.js"></script>
</head>
<body>
    <div>
        <nav class="navbar navbar-expand-lg navbar-light text-white-50 bg-secondary sticky-top">
            <a class="navbar-brand text-white-50" href="">中天教育</a>
            <span>教师：@ViewBag.tName</span>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto"></ul>
                <a href="/Member/MemberByTeacher" class="text-white-50 mr-3">返回</a>
            </div>
        </nav>

        <table class="table tab-content table-hover text-center">
            <thead class="thead-dark">
                <tr>
                    <th>课程编号</th>
                    <th>课程名称</th>
                    <th>课程描述</th>
                    <th>课程状态</th>
                    <th>所属教师</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Midheaven.Models.Course item in ViewBag.couser)
                {
                    <tr>
                        <td>@item.C_ID</td>
                        <td>@item.C_Name</td>
                        <td>@item.C_Desc</td>
                        <td><span class="badge badge-primary">@(Convert.ToInt32(item.C_flog)==0?"可选":"维护中")</span></td>
                        <td><span class="badge badge-danger">@ViewBag.tName</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
