@model Midheaven.Models.Member
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta http-equiv="content-type" content="text/html;charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link href="~/title.ico" rel="icon" type="image/x-icon" />
    <title>登录</title>
    <link href="~/content/style.css" rel="stylesheet" />
    <link href="~/content/bootstrap.min.css" rel="stylesheet" />

    <script src="~/script/jquery-3.4.1.min.js"></script>
    <script src="~/script/vector.js"></script>
</head>
<body>
    <div id="container">
        <div id="output">
            <div class="containerT">
                <h1 class="text-center">用户登录</h1>
                @using (Html.BeginForm("", "", FormMethod.Post))
                {
                    @Html.TextBoxFor(m => m.UserName, new { @class = "uinput", placeholder = "用户名", required = "required" })
                    @Html.PasswordFor(m => m.Password, new { @class = "uinput", placeholder = "密码", required = "required" })
                    <div>
                        <label class="text-left">
                            @Html.CheckBox("chklogin")<span>记住密码</span>
                        </label>
                        <div class="float-right d-inline-block">
                            @Html.ActionLink("还没有账户？", "Register", "Member", new { @class = "text-danger" })
                        </div>

                    </div>
                    <button type="submit" class="mt-1">登录</button>
                    <label id="prompt" class="text-danger mt-1"></label>
                }
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(function () {
            Victor("container", "output");   //登录背景函数
            $("#UserName").focus();
            $(document).keydown(function (event) {
                if (event.keyCode == 13) {
                    $("#entry_btn").click();
                }
            });
        });

        /**
        登录异步验证
        */
        function PostData() {
            var uName = $("#UserName").val();
            var uPwd = $("#Password").val();
            $.ajax({
                url: 'Login',
                data: { username: uName, userpwd: uPwd },
                type: 'post',
                dataType: 'json',
                success: (data) => {
                    if (data.Code == 200) {
                        if (data.uType == 0)
                            window.location.href = "";
                        else if (data.uType == 1)
                            window.location.href = "";
                        else
                            window.location.href = "";
                    } else
                        $("#prompt").text("用户名或密码错误");
                }
            });
        }

        /**
        清除lable标签内容
        */
        $("#UserName,#Password").focus(() => {
            $("#prompt").text("");
        })

    </script>
</body>
</html>